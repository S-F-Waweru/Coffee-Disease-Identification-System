<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/secondary_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/TVfarmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="4dp"
                android:text="Farm Name : "
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/idTVfarmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/TVfarmName"
                android:fontFamily="@font/open_sans"
                android:padding="4dp"
                android:text="Farm Name"
                android:textColor="@color/brown"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/TVFarmSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTVfarmName"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/open_sans_semibold:"
                android:padding="4dp"
                android:text="Farm Size"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/idTVFarmSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTVfarmName"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/TVFarmSize"
                android:fontFamily="@font/open_sans"
                android:padding="4dp"
                android:text="Farm Size"
                android:textColor="@color/brown"
                android:textSize="15sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="120dp"

            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/addLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/Add_location"
                android:elevation="5dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_corner"
                android:layout_toRightOf="@id/viewLocation"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_addloaction" />


            <ImageButton
                android:id="@+id/viewLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rouded_corner_brown"
                android:contentDescription="@string/Add_location"
                android:elevation="5dp"
                android:src="@drawable/ic_viewlocation" />
        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>