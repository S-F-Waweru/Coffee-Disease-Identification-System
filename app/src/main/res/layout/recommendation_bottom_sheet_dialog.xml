<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reccomenadation Description"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textSize="12sp"
        android:id="@+id/idTVRecommendationDescription"
        android:padding="8dp"
        android:layout_marginTop="12dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@id/idTVRecommendationDescription">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginHorizontal="24dp"
            android:text="Edit Recommendation  "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEditRecommendation"/>


    </LinearLayout>

</RelativeLayout>