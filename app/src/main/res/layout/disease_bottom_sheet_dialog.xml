<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="16dp"
    app:circularflow_radiusInDP="16dp"
    android:paddingHorizontal="4dp">

    <TextView
        android:id="@+id/idTVFDiseaseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Disease Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disease Description"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textSize="12sp"
        android:id="@+id/idTVDiseaseDescription"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/idTVFDiseaseName"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/idTVDiseaseDescription">

        <Button
            android:id="@+id/idBtnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:elevation="4dp"
            android:background="@drawable/rounded_corner"
            android:text="Edit Disease  "
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>

</RelativeLayout>