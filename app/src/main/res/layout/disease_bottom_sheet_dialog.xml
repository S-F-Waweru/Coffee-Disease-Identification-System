<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disease Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_semibold"
        android:id="@+id/idTVFDiseaseName"
        android:padding="4dp"
        android:layout_margin="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disease Description"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textSize="12sp"
        android:id="@+id/idTVDiseaseDescription"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/idTVFDiseaseName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@id/idTVDiseaseDescription">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Disease  "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit"/>


    </LinearLayout>

</RelativeLayout>