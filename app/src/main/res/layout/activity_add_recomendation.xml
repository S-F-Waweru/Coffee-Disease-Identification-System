<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12sp"
    android:layout_height="match_parent"
    tools:context=".AddRecommendation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32sp">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add reccomendation"
            android:textAlignment="center"
            android:elevation="4sp"
            android:textSize="24sp"
            android:padding="16sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/green"


            />
    </RelativeLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/idTVDiseseRecommendation"
        android:padding="8sp"
        android:id="@+id/idSpinnerDisease"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:backgroundTint="@color/white"
        app:boxStrokeColor="@color/green"
        app:boxStrokeWidth="1dp"
        app:endIconMode="clear_text"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/black"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idTVDiseseRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/open_sans"
            android:hint="Recommendation Description"
            android:inputType="textImeMultiLine |textMultiLine"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--    Add Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Add Recommendation"
        android:layout_marginStart="64sp"
        android:layout_marginEnd="64sp"
        android:layout_marginTop="64sp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_semibold"
        android:background="@drawable/rounded_corner"/>



</LinearLayout>