<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".IdentifyDiseaseActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="224dp"
            android:layout_height="224dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64sp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="64sp"
            android:elevation="4sp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_leaf_dias" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content "
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="81dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Plant Result :"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diseaseResult"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/open_sans_semibold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text=" Confidences :"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/confidencesTV"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/open_sans"
            android:textSize="16sp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="16sp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="4sp"
            android:text="Latitude:" />

        <TextView
            android:id="@+id/latTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="16sp"
            android:layout_marginEnd="16dp"
            android:text="Latitude will be here! "
            android:textColor="@color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="16sp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="4sp"
            android:text="Longitude:" />

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="16sp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginEnd="16dp"
            android:text="Longitude will be here! "
            android:textColor="@color/black" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="64sp"
            android:layout_marginBottom="10dp"
            android:layout_marginVertical="16sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:drawableTint="@color/green"
            android:elevation="4sp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Capture Photo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="16sp"
            android:layout_marginStart="64sp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:elevation="4sp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text=" Choose from Gallery"
            android:textColor="@color/white" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="108dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:elevation="4sp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="Recommendation"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>